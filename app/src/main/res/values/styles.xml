<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/yellow_1</item>
    </style>

    <style name="ErrorToast">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:colorBackground">@color/green_1</item>
        <item name="android:icon">@drawable/ic_error</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
